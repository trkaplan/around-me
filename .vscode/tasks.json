{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true, //This prevents the launch.json to wait for the completion of the task
      "problemMatcher": {
        "owner": "custom", //This is not needed but, required by the problemMatcher Object
        "pattern": {
          "regexp": "^$" //This is not needed but, required by the problemMatcher Object
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Compiling...", //Signals the begin of the Task
          "endsPattern": "Compiled .*" //Signals that now the initialisation of the task is complete
        }
      },
      "identifier": "Start Server"
    }
  ]
}
